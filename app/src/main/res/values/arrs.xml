<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputNumberView">
        <attr name="max" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="step" format="integer"/>
        <attr name="defaultValue" format="integer"/>
        <attr name="disable" format="boolean"/>
        <attr name="valueSize" format="dimension"/>
        <attr name="Background" format="reference"/>

    </declare-styleable>

    <declare-styleable name="LoginPageView">
        <attr name="mainColor" format="color"/>
        <attr name="verifyCodeSize" format="integer"/>
        <attr name="total" format="integer"/>
    </declare-styleable>

    <declare-styleable name="flowView">
        <attr name="itemHorizontalMargin" format="dimension"/>
        <attr name="itemVerticalMargin" format="dimension"/>
        <attr name="maxLine" format="integer"/>
        <attr name="textMaxLength" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="keypadView">
        <attr name="numberColor" format="color"/>
        <attr name="numberSize" format="dimension"/>
        <attr name="itemPressBg" format="color"/>
        <attr name="itemNormalBg" format="color"/>
        <attr name="itemMargin" format="dimension"/>
    </declare-styleable>

   <declare-styleable name="SlideMenuView">
       <attr name="function">
           <flag name="top" value="0x30" />
           <flag name="delete" value="0x50" />
           <flag name="read" value="0x03" />
       </attr>
   </declare-styleable>

    <declare-styleable name="WatchFaceView">
        <attr name="secondColor" format="color"/>
        <attr name="minColor" format="color"/>
        <attr name="hourColor" format="color"/>
        <attr name="scaleColor" format="color"/>
        <attr name="watchFaceBackground" format="reference"/>
        <attr name="scaleShow" format="boolean"/>
    </declare-styleable>


</resources>